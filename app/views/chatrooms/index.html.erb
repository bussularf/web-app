<div class="container-idx">
  <div class="user-container">
    <% @chatrooms.each do |c| %>
      <div class="chatroom-ind">
        <% if c.photo.present? %>
          <%= cl_image_tag c.photo.key, class: "avatar-bordered"%>
        <% end %>
        <%= link_to c.name, chatroom_path(c) %>
        <%= link_to edit_chatroom_path(c) do %>
          <i class="fas fa-pencil-alt mr-4"></i>
        <% end %>
      </div>
    <% end %>
  </div>
  <div class="info-img-idx">
    <%= image_tag("capa.svg") %>
  </div> 
</div>
<%= render 'shared/footer' %>